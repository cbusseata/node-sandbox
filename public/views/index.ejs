<% include partials/head %>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
	<h1>A Membership Site Example</h1>

	<p>This is an example website where users can sign up and have a cool profile.</p>

	<p>Login or Register with:</p>

	<% if (!login) { %>
		<div class="row">
			<a href="/login" class="btn btn-default btn-lg">
				<span class="glyphicon glyphicon-user" aria-hidden="true"></span> Local Login
			</a>

			<a href="/signup" class="btn btn-default btn-lg">
				<span class="glyphicon glyphicon-user" aria-hidden="true"></span> Local Signup
			</a>

			<a href="/auth/facebook" class="btn btn-primary btn-lg">
				<span class="fa fa-facebook" aria-hidden="true"></span> Facebook
			</a>

			<a href="/auth/twitter" class="btn btn-info btn-lg">
				<span class="fa fa-twitter" aria-hidden="true"></span> Twitter
			</a>

			<a href="/auth/google" class="btn btn-danger btn-lg">
				<span class="fa fa-google-plus" aria-hidden="true"></span> Google
			</a>
		</div>
	<% } %>
</div>

<% include partials/foot %>